<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/reward</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<mapping class="com.pnp.resource.model.Employee"></mapping>
		<mapping class="com.pnp.resource.model.Department"></mapping>
		<mapping class="com.pnp.resource.model.Occupation"></mapping>
		<mapping class="com.pnp.resource.model.Credential"></mapping>
		<mapping class="com.pnp.resource.model.Nominal"></mapping>
		<mapping class="com.pnp.resource.model.TicketCategory"></mapping>
		<mapping class="com.pnp.resource.model.TicketSubCategory"></mapping>
		<mapping class="com.pnp.resource.model.Ticket"></mapping>
	</session-factory>
</hibernate-configuration>                    